<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wxn.example.webapp.dao.DepartmentMapper">

    <resultMap id="departmentResultMap" type="cn.wxn.example.webapp.entry.Department">
        <id column="d_id" property="id"/>
        <result column="d_name" property="name"/>
        <result column="d_description" property="description"/>
        <association property="parent" javaType="cn.wxn.example.webapp.entry.Department">
            <id column="p_id" property="id" />
        </association>
    </resultMap>

    <insert id="insertDepartment" parameterType="cn.wxn.example.webapp.entry.Department" useGeneratedKeys="true" keyProperty="id">
        insert into department(
                d_name,p_id
            <if test="description != null">
               , d_description
            </if>
        ) values(
                #{name}
            <if test="parent.id != null">
                , #{parent.id}
            </if>
            <if test="parent.id == null">
                , -1
            </if>
            <if test="description != null">
               , #{description}
            </if>
        );
    </insert>

    <update id="updateDepartment" parameterType="cn.wxn.example.webapp.entry.Department">
        update department SET
            d_name = #{name}
        <if test="description != null">
            ,d_description = #{description}
        </if>
        <if test="parent.id != null">
            ,p_id=#{parent.id}
        </if>
        where d_id = #{id};
    </update>

    <select id="findDepartmentById" parameterType="long" resultMap="departmentResultMap">
        select d_id, d_name, d_description, p_id from department
        where d_id = #{id};
    </select>

    <delete id="deleteDepartment" parameterType="long">
        delete from department where d_id = #{id};
    </delete>

    <select id="findDepartments" resultMap="departmentResultMap">
        select * from department;
    </select>

</mapper>